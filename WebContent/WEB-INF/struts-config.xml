<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE struts-config PUBLIC
       "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN"
       "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">

<struts-config>

	<form-beans>
		<form-bean name="loginForm" type="com.dbt.forms.LoginForm"></form-bean>
		<form-bean name="passwordForm" type="com.dbt.forms.ForgotPassword"></form-bean>
	</form-beans>

	<action-mappings>

       
       <action path="/ConfirmOrder" type="com.dbt.dao.OrderDAO" scope="request">
         <forward name="success" path="/ConfirmOrder.jsp"></forward>
       	 <forward name="failure" path="/takeorder.jsp"></forward>
       </action>


		<action path="/ForgotPassword" type="com.dbt.action.ForgotPasswordAction"
			validate="true" input="/login.jsp" name="passwordForm">
		</action>

		<action path="/otpAuth" type="com.dbt.action.LoginAction"
			scope="request">
			<forward name="success" redirect="true" path="/dashboard.jsp" />
			<forward name="failure" path="/login.jsp" />
		</action>


		<action path="/login" type="com.dbt.action.LoginAction" name="loginForm"
			scope="request" validate="true" input="/login.jsp">
			<forward name="success" redirect="true" path="/dashboard.jsp" />
			<forward name="failure" path="/login.jsp" />

		</action>

		<action path="/logout" type="com.dbt.action.LogOutAction"
			scope="request">
			<forward name="success" redirect="true" path="/login.jsp" />
			<forward name="error" redirect="true" path="/errors/error.jsp" />
		</action>
	</action-mappings>



	<message-resources parameter="MessageResources" null="false" />

</struts-config>